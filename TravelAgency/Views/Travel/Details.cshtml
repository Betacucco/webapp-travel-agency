@model Travel

<!--Container con dettagli pacchetto e tabella richieste utente associate al pacchetto-->
<div class="container m-3">
    <div class="row">
        <div class="col-lg-4 col-12">
            <div class="shadow-lg text-center pb-3 rounded-bottom">
                <figure class="figure w-100">
                    <img src="@Model.Image" class="figure-img w-100 mb-0" alt="Sea">
                <figcaption class="figure-caption bg-warning">
                    <h4 class="text-uppercase text-white pt-3 pb-3">@Model.Title</h4>
                </figcaption>
                </figure>
                <p class="mb-2">
                    @Model.Description
                </p>
                <hr class="mb-0 text-muted border border-1">

                <span class="fw-bold pb-2">@Model.Price &euro;/person</span>
            </div>
        </div>
        <div class="col-lg-4 col-12">
            <h3>Tabella Richieste</h3>
            <!--Se non ci sono richieste restituisce H2 altrimenti una table delle informazioni inserite-->
            @if(@Model.Travels.Count == 0)
            {
                <h2 class="text-warning text-uppercase">non ci sono richieste sui pacchetti</h2>
            }
            else
            {
                <table class="table align-middle">
                    <thead>
                        <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Messaggio</th>
                        </tr>
                    </thead>
                    <tbody>
        
                @foreach(User informazioni in Model.Travels)
                {
                    <tr>
                        <td class="align-middle">@informazioni.Name</td>
                        <td class="align-middle">@informazioni.Email</td>
                        <td class="align-middle">@informazioni.Message</td>
                    </tr>
                }

                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
